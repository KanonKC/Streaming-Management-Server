// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model ShowImage {
    id              Int      @id @default(autoincrement())
    twitchId        String?
    username        String?
    imageUrl        String
    timestamp       DateTime @default(now())
    imageFilename   String   @unique
}

model TwitchChannelPointRedeemedLog {
    id            Int      @id @default(autoincrement())
    userId        String
    username      String
    rewardId      String
    rewardName    String
    rewardCost    Int
    rewardPrompt  String?
    timestamp     DateTime @default(now())
}

model CustomWelcomeMessage {
    id              Int      @id @default(autoincrement())
    twitchUserId    String   @unique
    soundFilePath   String
    message         String?
}

model KillerRequestQueue {
    id              Int      @id @default(autoincrement())
    twitchUserId    String 
    twitchUsername  String
    description     String
    isRandom        Boolean  @default(false)
    isActive        Boolean  @default(true)
    timestamp       DateTime @default(now())
}

model MagicNumberMysteryBox {
    id                      Int      @id @default(autoincrement())
    minNumber               Int
    maxNumber               Int
    possibleMinNumber       Int
    possibleMaxNumber       Int
    correctNumber           Int
    twitchRewardId          String
    isActive                Boolean  @default(true)
    winnerUserId            String?
    winnerUsername          String?
    description             String?
    timestamp               DateTime @default(now())
}

model Storage {
    id                      Int      @id @default(autoincrement())
    namespace               String   @unique
    spotifyAccessToken      String?
    spotifyRefreshToken     String?
    spotifyTokenExpires     DateTime?
    twitchAccessToken       String?
    twitchRefreshToken      String?
    twitchTokenExpires      DateTime?
    timestamp               DateTime @default(now())
}

model TwitchUserRevealTarotCard {
    id                      Int      @id @default(autoincrement())
    twitchUserId            String
    majorCardId             Int
    minorCardId             Int
    data                    String   @default("{}")
    timestamp               DateTime @default(now())
}

model MathGame {
    id                      Int      @id @default(autoincrement())
    expression              String
    answer                  Int
    resolveTwitchUserId     String?
    resolveTwitchUsername   String?
    isResolved              Boolean  @default(false)
    createAt                DateTime @default(now())
    updatedAt               DateTime @updatedAt
}

model MathGameGuessLog {
    id                      Int      @id @default(autoincrement())
    mathGameId              Int
    guess                   String
    twitchUserId            String
    twitchUsername          String
    isCorrect               Boolean
    createAt                DateTime @default(now())
    updatedAt               DateTime @updatedAt
}

model HangedManGame {
    id                      Int      @id @default(autoincrement())
    isResolved              Boolean  @default(false)
    word                    String
    currentWordState        String   @default("")
    correctGuessedLetters   String   @default("")
    incorrectGuessedLetters String   @default("")
    guessesLeft             Int
    clue                    String   @default("")
    createAt                DateTime @default(now())
    updatedAt               DateTime @updatedAt
}

model HangedManGameAttemptedLog {
    id                      Int      @id @default(autoincrement())
    hangedManGameId         Int
    twitchUserId            String
    twitchUsername          String
    guessType               String
    guess                   String
    score                   Int
    isCorrect               Boolean
    createAt                DateTime @default(now())
    updatedAt               DateTime @updatedAt
}