// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model ShowImage {
    id              Int      @id @default(autoincrement())
    twitchId        String?
    username        String?
    imageUrl        String
    timestamp       DateTime @default(now())
    imageFilename   String   @unique
}

model TwitchChannelPointRedeemedLog {
    id            Int      @id @default(autoincrement())
    userId        String
    username      String
    rewardId      String
    rewardName    String
    rewardCost    Int
    rewardPrompt  String?
    timestamp     DateTime @default(now())
}

model CustomWelcomeMessage {
    id              Int      @id @default(autoincrement())
    twitchUserId    String   @unique
    soundFilePath   String
    message         String?
}

model KillerRequestQueue {
    id              Int      @id @default(autoincrement())
    twitchUserId    String 
    twitchUsername  String
    description     String
    isRandom        Boolean  @default(false)
    isActive        Boolean  @default(true)
    timestamp       DateTime @default(now())
}

model MagicNumberMysteryBox {
    id                      Int      @id @default(autoincrement())
    minNumber               Int
    maxNumber               Int
    possibleMinNumber       Int
    possibleMaxNumber       Int
    correctNumber           Int
    twitchRewardId          String
    isActive                Boolean  @default(true)
    winnerUserId            String?
    winnerUsername          String?
    description             String?
    timestamp               DateTime @default(now())
}

model Storage {
    id                      Int      @id @default(autoincrement())
    namespace               String   @unique
    spotifyAccessToken      String?
    spotifyRefreshToken     String?
    spotifyTokenExpires     DateTime?
    twitchAppAccessToken    String?
    twitchAppTokenExpires   DateTime?
    twitchAccessToken       String?
    twitchRefreshToken      String?
    twitchTokenExpires      DateTime?
    timestamp               DateTime @default(now())
}